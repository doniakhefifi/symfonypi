{% block title %}Add Livraison{% endblock %}

{% block stylesheets %}
    <style>
        .form {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form">
        <h1 style="text-align: center;">Add Livraison</h1>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.clientName, {'attr': {'class': 'form-control', 'placeholder': 'Client Name'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.deliveryAdress, {'attr': {'class': 'form-control', 'placeholder': 'Delivery Address'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.deliveryDate, {'attr': {'class': 'form-control', 'placeholder': 'Delivery Date'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.status, {'attr': {'class': 'form-control', 'placeholder': 'Status'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.commande, {'attr': {'class': 'form-control', 'placeholder': 'Commande'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.livreur, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit">Add Livraison</button>
        {{ form_end(form) }}
    </div>
    <a href="{{ path('list_livraison') }}" class="btn btn-primary">Back To List</a>
{% endblock %}
